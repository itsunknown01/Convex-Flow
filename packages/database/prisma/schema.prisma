generator client {
  provider = "prisma-client-js"
  output   = "../src/generated-client"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

enum ExecutionStatus {
  CREATED
  RUNNING
  PAUSED
  AWAITING_APPROVAL
  COMPLETED
  FAILED
}

model WorkflowDefinition {
  id          String   @id @default(uuid())
  tenantId    String
  title       String
  description String?
  definition  Json     // The actual steps (YAML/JSON converted)
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  executions  WorkflowExecution[]
}

model WorkflowExecution {
  id                   String   @id @default(uuid())
  tenantId             String
  workflowDefinitionId String
  status               ExecutionStatus @default(CREATED)
  input                Json?
  output               Json?
  currentStepId        String?
  state                Json?     // Global variable state for the run
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  tenant              Tenant             @relation(fields: [tenantId], references: [id])
  workflowDefinition  WorkflowDefinition @relation(fields: [workflowDefinitionId], references: [id])
  jobs                Job[]
  approvalRequests    ApprovalRequest[]

  @@index([tenantId, status])
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

model Job {
  id          String    @id @default(uuid())
  executionId String
  stepId      String
  type        String
  input       Json?
  output      Json?
  status      JobStatus @default(PENDING)
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())

  execution   WorkflowExecution @relation(fields: [executionId], references: [id])

  @@index([executionId, status])
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users       Membership[]
  workflowDefinitions WorkflowDefinition[]
  workflowExecutions  WorkflowExecution[]
  aiRequestLogs       AiRequestLog[]
  ledgerEntries       LedgerEntry[]
  policies            Policy[]
  approvalRequests    ApprovalRequest[]
}

model Policy {
  id          String   @id @default(uuid())
  tenantId    String
  triggerType String   // AI_CONFIDENCE, TASK_FAILURE, etc.
  threshold   Float?
  action      String   // BLOCK, APPROVE, NOTIFY
  createdAt   DateTime @default(now())

  tenant      Tenant   @relation(fields: [tenantId], references: [id])
}

model ApprovalRequest {
  id          String   @id @default(uuid())
  tenantId    String
  executionId String
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  type        String?  // AI_CONFIDENCE_CHECK, etc.
  reason      String?  // Description of why it was paused
  context     Json?    // Snapshot of why it's paused
  createdAt   DateTime @default(now())

  tenant      Tenant            @relation(fields: [tenantId], references: [id])
  execution   WorkflowExecution @relation(fields: [executionId], references: [id])

  @@index([tenantId, status])
}

model LedgerEntry {
  id           String   @id @default(uuid())
  tenantId     String
  previousHash String
  hash         String
  eventType    String
  data         String
  createdAt    DateTime @default(now())

  tenant       Tenant   @relation(fields: [tenantId], references: [id])
  
  @@index([tenantId])
  @@index([createdAt])
}

model AiRequestLog {
  id          String   @id @default(uuid())
  tenantId    String
  model       String
  prompt      String
  response    Json
  tokensUsed  Int?
  latencyMs   Int
  statusCode  Int
  createdAt   DateTime @default(now())

  tenant      Tenant   @relation(fields: [tenantId], references: [id])
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenants      Membership[]
}

model Membership {
  id        String   @id @default(uuid())
  userId    String
  tenantId  String
  role      String   @default("MEMBER") // ADMIN, MEMBER

  user      User     @relation(fields: [userId], references: [id])
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([userId, tenantId])
}
